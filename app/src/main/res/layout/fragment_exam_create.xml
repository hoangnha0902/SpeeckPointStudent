<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:minWidth="350dp"
    android:minHeight="200dp"
    tools:context=".ui.classcreate.ClassCreateFragment">


    <TextView
        android:id="@+id/textClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Mã kỳ thi: "
        app:layout_constraintBottom_toBottomOf="@id/edtIdExam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edtIdExam" />

    <EditText
        android:id="@+id/edtIdExam"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/spinner_bg"
        android:inputType="number"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textClassName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barrier"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textedtNameExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Tên kỳ thi:"
        app:layout_constraintBottom_toBottomOf="@+id/edtNameExam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edtNameExam" />

    <EditText
        android:id="@+id/edtNameExam"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:minHeight="40dp"
        android:maxLines="3"
        android:gravity="start"
        android:layout_marginTop="4dp"
        android:background="@drawable/spinner_bg"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edtIdExam"
        app:layout_constraintStart_toStartOf="@+id/edtIdExam"
        app:layout_constraintTop_toBottomOf="@+id/edtIdExam" />


    <TextView
        android:id="@+id/idSchoolYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Mã năm học:"
        app:layout_constraintBottom_toBottomOf="@+id/edtIdSchoolYear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edtIdSchoolYear" />

    <EditText
        android:id="@+id/edtIdSchoolYear"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/spinner_bg"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edtNameExam"
        app:layout_constraintStart_toStartOf="@+id/edtNameExam"
        app:layout_constraintTop_toBottomOf="@+id/edtNameExam" />


    <TextView
        android:id="@+id/textClassYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Tên năm học: "
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/spinner_bg"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edtIdSchoolYear"
        app:layout_constraintStart_toStartOf="@+id/edtIdSchoolYear"
        app:layout_constraintTop_toBottomOf="@+id/edtIdSchoolYear">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spYear"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/spinner_bg"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/createExan"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/createExan"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/spinner_bg"
        android:text="Tạo"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintTop_toTopOf="@+id/cancel" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Tạo kỳ thi"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="textClassName,idSchoolYear,textClassYear,textedtNameExam" />

</androidx.constraintlayout.widget.ConstraintLayout>